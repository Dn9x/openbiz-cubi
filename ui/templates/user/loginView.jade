div.panel.panel-default
	div.panel-body
		form.login-form.form-horizontal.col-md-6(role="form")
			h4 <%= existingUsers %>
			hr
			div.form-group
				label.col-sm-2.col-md-3.control-label(for="inputEmail") <%= email %>
				div.col-sm-8
					input.form-control#inputEmail(required,type="email",placeholder!="<%= email %>")
			div.form-group
				label.col-sm-2.col-md-3.control-label(for="inputPassword") <%= password %>
				div.col-sm-8
					input.form-control#inputPassword(required,type="password",placeholder!="<%= password %>")
			div.form-group
				div.col-sm-3.col-md-4.col-lg-3
					button.btn.btn-primary.btn-lg(type="submit") 
						|  &nbsp; <%= signIn %> &nbsp;
				div.col-sm-8
					hr.visible-xs
					a.forget-password.text-info(href="#") <%= forgetPassword %>
					p <%= or %>
						a.text-info(href="#") <%= signInWithSocial %>
					

		div.col-md-5
			hr.visible-xs.visible-sm
			h4 <%= newUsers %>
			hr
			div
				p <%= ifDontHaveAccount %>
				button.btn-create-account.btn.btn-default.btn-lg <%= createAccount %>					
			div
				
			