div.panel.panel-default
	div.panel-body
		form.form-horizontal.col-md-6(role="form")
			h4 Existing Users
			hr
			div.form-group
				label.col-sm-2.control-label(for="inputEmail") Email
				div.col-sm-8
					input.form-control#inputEmail(type="email",placeholder="Email")
			div.form-group
				label.col-sm-2.control-label(for="inputPassword") Password
				div.col-sm-8
					input.form-control#inputPassword(type="password",placeholder="Password")
			div.form-group
				div.col-sm-3.col-md-4.col-lg-3
					button.btn.btn-primary.btn-lg(type="submit") 
						|  &nbsp; Sign in &nbsp;
				div.col-sm-8
					hr.visible-xs
					a.text-info(href="#") Forget password?
					p or 
						a.text-info(href="#") Sign in with Social Networks
					

		div.col-md-5
			hr.visible-xs.visible-sm
			h4 New Users
			hr
			div
				p.
					If you don't have an account yet, 
					Please click below button to create a new account

				a.btn.btn-default.btn-lg
					| Create Account 
			div
				
			