ol.breadcrumb
	li
		a(href='#') Home
	li
		a(href='#') Me
	li.active Profile
#content
	.row
		.col-lg-12
			section.panel.wizard-form.corner-flip(role="form",parsley-validate,novalidate="novalidate")
			header.panel-heading
				h2 <%= viewTitle %>
			img.circle(alt='', src!='<%= baseUrl %>/images/avatar.png')
	div.panel-body
		form.form-profile(role="form",parsley-validate,novalidate="novalidate")
			.form-group
				input.form-control.pull-left(name="contact-firstname",required,type="text",placeholder!="<%= firstName %>",value!="<%= contact.get('name').firstName %>",style="width:44%;margin-right:1%;")
				input.form-control.pull-left(name="contact-lastname",required,type="text",placeholder!="<%= lastName %>",value!="<%= contact.get('name').lastName %>",style="width:44%;margin-right:1%;")
			//.form-group
			//	input(type="radio",id="title-mr",name="title",value="Mr", parsley-trigger="ifClicked ifChanged",parsley-required="true",parsley-group="title")
			//		label(style="margin-bottom:0px;") <%= titleMr %>
			//		input(type="radio",id="title-ms",name="title",value="Ms", parsley-trigger="ifClicked ifChanged",parsley-group="title")
			//		label(style="margin-bottom:0px") <%= titleMs %>
			//	div.input-group.date.form_datetime(data-date-format='yyyy-MM-dd', data-picker-position='bottom-left',style='width:180px')
			//		input.form-control(type='text',value='2014-02-10',style='width:200px')
			//		span.input-group-btn
			//			button.btn.btn-default(type='button')
			//				i.fa.fa-calendar
			button.hidden(type="submit")
	footer.panel-footer
		button.btn-save.btn.btn-theme(type="submit")
			i.fa.fa-check
				| &nbsp; Save &nbsp;
	div.panel-body
		table.table.table-striped.table-bordered.text-center
			thead
				tr
					th.hidden-xs ID
					th CountryCode
					th Number
					th.hidden-xs Type
					th Action
			tbody
				<% if(phones.length){ %>
				<% _.forEach(phones,function(phone){ %>
				tr
					td.hidden-xs <%= phone.id %>
					td <%= phone.get("countryCode") %>
					td <%= phone.get("number") %>
					td.hidden-xs <%= phone.get("type") %>
					td
						div.tooltip-area
							a.btn.btn-default.btn-sm.btn-record-detail(style="margin-right:5px;")
								span.hidden-xs
									i.fa.fa-file-text-o
									|&nbsp; Detail &nbsp;
								span.visible-xs
									i.fa.fa-file-text-o
							a.btn.btn-default.btn-sm.btn-record-delete(phone-id!='<%= phone.id %>')
								span.hidden-xs
									i.fa.fa-trash-o
									|&nbsp; Delete &nbsp;
								span.visible-xs
									i.fa.fa-trash-o
				<% }) %>
				<% }else{ %>
				//tr
				//	td(colspan="5") Please click "Invite User" button to start invite your colleagues.
				<% } %>

