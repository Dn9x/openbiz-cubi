ol.breadcrumb
	li
		a(href='#') Home
	li
		a(href='#') Me
	li.active Profile
#content
	.row
		div.panel-heading
			h2 <%= viewTitle %>
		div.panel-body
			.col-md-4.align-md-center
				img.circle#avator(alt='', src!='<%= baseUrl %>/images/avatar.png')
				form#group-content-picture(class="form-group",role="form",enctype="multipart/form-data",method="post",action="/api/me/upload")
					br
					input#uploadFile(type="file",name="picture")
					br
					button.btn-uploadPicture.btn.btn-theme(type="submit")
						| &nbsp; Upload &nbsp;
			.col-md-8
				br
				br
				br
				br
				.col-md-offset-1
					p <%= company %> : <%= contact.get('company') %>
				.col-md-offset-1
					p <%= department %> : <%= contact.get('department')%>
		div.panel-body
			form.form-profile(role="form",parsley-validate,novalidate="novalidate")
				.form-group
					.row
						input.form-control.pull-left(name="contact-lastname",required,type="text",placeholder!="<%= lastName %>",value!="<%= contact.get('name').lastName %>",style="width:44%;margin-right:1%;")
						input.form-control.pull-left(name="contact-firstname",required,type="text",placeholder!="<%= firstName %>",value!="<%= contact.get('name').firstName %>",style="width:44%;margin-right:1%;")
					.row
						br
						label <%= birthday %>
						div.input-group.date.form_datetime(data-date-format='yyyy-MM-dd', data-picker-position='bottom-left',style='width:180px')
							input.form-control(type='text',value!="<%= contact.getBirthday() %>",style='width:200px',readonly='readonly',name="contact-birthday")
							span.input-group-btn
								button.btn.btn-default(type='button')
									i.fa.fa-calendar
				//.form-group
					//ul.iCheck.form-control(data-color='green')
						li.pull-left.col-xs-6(style="padding-bottom:0px")
							input(type="radio",id="title-mr",name="title",value="Mr", parsley-trigger="ifClicked ifChanged",parsley-required="true",parsley-group="title")
							label(style="margin-bottom:0px;") <%= titleMr %>
						li.pull-left.col-xs-6(style="padding-bottom:0px")
							input(type="radio",id="title-ms",name="title",value="Ms", parsley-trigger="ifClicked ifChanged",parsley-group="title")
							label(style="margin-bottom:0px") <%= titleMs %>
		div.panel-footer
			button.btn-save.btn.btn-theme(type="submit")
				i.fa.fa-check
					| &nbsp; Save &nbsp;
		div.panel-heading
			h5
				| Phone
		div.panel-body.data-grid-phone
		div.panel-footer
			button.btn-next.btn.btn-theme.btn-phone-add(type="submit")
				i.fa.fa-plus
				| &nbsp; Add Phone &nbsp;

		div.panel-heading
			h5
				| Address
		div.panel-body.data-grid-address
		div.panel-footer
			button.btn-next.btn.btn-theme.btn-address-add(type="submit")
				i.fa.fa-plus
				| &nbsp; Add Address &nbsp;

script(type="text/template",id="action-column-template-phone")
	div.tooltip-area
		a.btn.btn-default.btn-sm.btn-phone-delete(phone-id!='{{ id }}')
			span.hidden-xs
				i.fa.fa-trash-o
				| &nbsp; Delete &nbsp;
			span.visible-xs
				i.fa.fa-trash-o

script(type="text/template",id="action-column-template-address")
	div.tooltip-area
		a.btn.btn-default.btn-sm.btn-address-delete(address-id!='{{ id }}')
			span.hidden-xs
				i.fa.fa-trash-o
				| &nbsp; Delete &nbsp;
			span.visible-xs
				i.fa.fa-trash-o